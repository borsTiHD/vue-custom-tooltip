{
  "name": "@borstihd/vue-custom-tooltip",
  "type": "module",
  "version": "1.1.3",
  "description": "A flexible and accessible Vue 3 tooltip component with directive support",
  "author": "borsTiHD",
  "license": "MIT",
  "homepage": "https://github.com/borsTiHD/vue-custom-tooltip#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/borsTiHD/vue-custom-tooltip.git"
  },
  "bugs": {
    "url": "https://github.com/borsTiHD/vue-custom-tooltip/issues"
  },
  "keywords": [
    "vue",
    "vue3",
    "tooltip",
    "component",
    "directive",
    "popover",
    "accessibility",
    "a11y"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/vue-custom-tooltip.es.js",
      "require": "./dist/vue-custom-tooltip.umd.js"
    },
    "./dist/style.css": "./dist/vue-custom-tooltip.css"
  },
  "main": "./dist/vue-custom-tooltip.umd.js",
  "module": "./dist/vue-custom-tooltip.es.js",
  "types": "./dist/index.d.ts",
  "files": [
    "LICENSE",
    "README.md",
    "dist"
  ],
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build:lib {@}\" --",
    "build:lib": "vite build --config vite.config.lib.ts",
    "build:demo": "vite build",
    "build:demo:github": "vite build",
    "build:demo:vercel": "VITE_BASE_PATH=/ vite build",
    "preview": "vite preview",
    "preview:demo": "vite preview --outDir dist-demo",
    "test:unit": "vitest",
    "type-check": "vue-tsc --build",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "prepublishOnly": "pnpm run test:unit run && pnpm run build"
  },
  "dependencies": {
    "vue": "^3.5.22"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.0.0",
    "@tailwindcss/vite": "^4.1.14",
    "@tsconfig/node22": "^22.0.2",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.7.2",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/eslint-plugin": "^1.3.20",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "eslint": "^9.37.0",
    "eslint-plugin-vue": "~10.5.0",
    "jiti": "^2.6.1",
    "jsdom": "^27.0.0",
    "npm-run-all2": "^8.0.4",
    "tailwindcss": "^4.1.14",
    "typescript": "~5.9.3",
    "vite": "^7.1.10",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-vue-devtools": "^8.0.2",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.1.1"
  }
}
